<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_pink_100">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/deleteBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_back"
                android:layout_gravity="center"
                android:layout_weight="0.4"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Delete Account"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:layout_weight="1.6"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/_10sdp"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/_7sdp"
            android:padding="@dimen/_5sdp"
            android:text="We're sad to see you go !"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/_7sdp"
            android:padding="@dimen/_5sdp"
            android:text="If you delete your account, your will permanently loose your profile, messages, photos and hitches. This action cannot be undone.\n\nAre you sure want to delete your account?"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:visibility="visible" />

        <Button
            android:id="@+id/deleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/md_pink_200"
            android:fontFamily="sans-serif"
            android:text="Delete Account"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>