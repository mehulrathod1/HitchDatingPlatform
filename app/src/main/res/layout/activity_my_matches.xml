<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.in.hitch.Activities.MainActivity"
    android:background="@color/md_pink_100">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/login_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="-50dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="0dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:src="@drawable/girl_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="0dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:src="@drawable/girl_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:visibility="visible"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="You Match with Misellia"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp">

            <Button
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Unmatch"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/_18sdp"
                android:background="@drawable/button_border"
                android:backgroundTint="@color/md_pink_200"/>

            <Button
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Message"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/_18sdp"
                android:backgroundTint="@color/md_pink_200"
                android:background="@drawable/button_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">

            <TextView
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/black"
                android:text="Age"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:gravity="left"
                android:text="22 Years"
                android:fontFamily="sans-serif"
                android:inputType="text"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp">

                <TextView
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/black"
                    android:text="Distance"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:text="5 KM"
                    android:fontFamily="sans-serif"
                    android:inputType="text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp">

                <TextView
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/black"
                    android:text="Mutual Interests"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:text="Boy"
                    android:fontFamily="sans-serif"
                    android:inputType="text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp">

                <TextView
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/black"
                    android:text="Job/Business"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:text="Dancer"
                    android:fontFamily="sans-serif"
                    android:inputType="phone"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">

            <TextView
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/black"
                android:text="Education"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:gravity="left"
                android:text="University name"
                android:fontFamily="sans-serif"
                android:inputType="text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">

            <TextView
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/black"
                android:text="Currant Location"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:gravity="left"
                android:text="Currant Location"
                android:fontFamily="sans-serif"
                android:inputType="text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">

            <TextView
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/black"
                android:text="Gender"
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:gravity="left"
                android:text="Female"
                android:fontFamily="sans-serif"
                android:inputType="text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_20sdp">

            <TextView
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/black"
                android:text="Sexual Orientation"
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:gravity="left"
                android:text="Straight"
                android:fontFamily="sans-serif"
                android:inputType="phone"/>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>