<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.in.hitch.Activities.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_bg" />

    <ScrollView
        android:id="@+id/sign_up_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/login_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_img"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/_220sdp"
                android:background="@drawable/layout_border"
                android:backgroundTint="#CCF3BEDC"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:text="@string/Profile_Completion"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_24sdp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/form_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="sans-serif"
                            android:text="@string/First_Name_Text"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/firstName"
                            style="@style/profile_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/md_white_1000"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:hint="Enter First name"
                            android:inputType="text"
                            android:maxLength="20"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/form_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="sans-serif"
                            android:text="@string/Last_Name"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/lastName"
                            style="@style/profile_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/md_white_1000"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:hint="@string/Last_Name_Hint"
                            android:inputType="text"
                            android:maxLength="20"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/form_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="sans-serif"
                            android:text="@string/Email"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/Email"
                            style="@style/profile_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/md_white_1000"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:hint="@string/Enter_Email_Hint"
                            android:inputType="text"
                            android:maxLength="30"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/form_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="sans-serif"
                            android:text="@string/Birth_Date"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="visible" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_day"
                                style="@style/profile_edt"
                                android:layout_width="50sp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@drawable/birth_bg"
                                android:gravity="center"
                                android:hint="DD"
                                android:inputType="number"
                                android:maxLength="2"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/white" />

                            <EditText
                                android:id="@+id/edt_month"
                                style="@style/profile_edt"
                                android:layout_width="50sp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@drawable/birth_bg"
                                android:gravity="center"
                                android:hint="MM"
                                android:inputType="number"
                                android:maxLength="2"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/white" />

                            <EditText
                                android:id="@+id/edt_year"
                                style="@style/profile_edt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/birth_bg"
                                android:gravity="center"
                                android:hint="YYYY"
                                android:inputType="number"
                                android:maxLength="4"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/birth_date"
                            style="@style/profile_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/md_white_1000"
                            android:focusable="false"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:hint="@string/Birth_Date_Hint"
                            android:inputType="none"
                            android:textColor="@color/white"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/birth_bg"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/b_date"
                                    style="@style/profile_edt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:background="@null"
                                    android:backgroundTint="@color/white"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:hint="DD"
                                    android:inputType="none"
                                    android:padding="@dimen/_5sdp"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/birth_bg"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <EditText
                                    android:id="@+id/b_year"
                                    style="@style/profile_edt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:background="@null"
                                    android:backgroundTint="@color/white"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:hint="MM"
                                    android:inputType="none"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/birth_bg"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/b_month"
                                    style="@style/profile_edt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:background="@null"
                                    android:backgroundTint="@color/md_white_1000"
                                    android:fontFamily="sans-serif"
                                    android:hint="YYYY"
                                    android:inputType="none"
                                    android:textColor="@color/white" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/form_heading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:fontFamily="sans-serif"
                                android:text="@string/Gender"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:orientation="horizontal">


                            <Spinner
                                android:id="@+id/sp_gender"
                                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/white"
                                android:dropDownVerticalOffset="40dp"
                                android:gravity="center_vertical"
                                android:popupBackground="@color/md_pink_200"
                                android:prompt="@string/app_name"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/form_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="sans-serif"
                            android:text="@string/Religion"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <Spinner
                            android:id="@+id/sp_religion"
                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/white"
                            android:dropDownVerticalOffset="40dp"
                            android:gravity="center_vertical"
                            android:popupBackground="@color/md_pink_200"
                            android:prompt="@string/app_name"
                            android:spinnerMode="dropdown" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/form_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="sans-serif"
                            android:text="@string/Sexual_Orientation"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <Spinner
                            android:id="@+id/sp_sexual_orientation"
                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/white"
                            android:dropDownVerticalOffset="40dp"
                            android:gravity="center_vertical"
                            android:popupBackground="@color/md_pink_200"
                            android:prompt="@string/app_name"
                            android:spinnerMode="dropdown" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/form_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:fontFamily="sans-serif"
                            android:text="@string/Interested_in"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <Spinner
                            android:id="@+id/sp_interest"
                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/white"
                            android:dropDownVerticalOffset="40dp"
                            android:gravity="center_vertical"
                            android:popupBackground="@color/md_pink_200"
                            android:prompt="@string/app_name"
                            android:spinnerMode="dropdown" />

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/button_border"
                    android:fontFamily="sans-serif"
                    android:text="@string/Get_Started"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:id="@+id/go_to_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="@string/Sign_in_msg"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="@string/Sign_Up_With"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:gravity="right">

                            <LinearLayout
                                android:id="@+id/date1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="@dimen/_120sdp"
                                    android:layout_height="@dimen/_37sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_border"
                                    android:drawableLeft="@drawable/facebook_new_icon"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:text="@string/Sign_Up_fb"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16sdp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:gravity="right">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="@dimen/_120sdp"
                                    android:layout_height="@dimen/_37sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_border"
                                    android:drawableLeft="@drawable/google_new_icon"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:text="@string/Sign_Up_Google"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16sdp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
