<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/matchImage"
                android:scaleType="centerCrop"
                android:src="@drawable/boy_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_40sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                app:cardCornerRadius="@dimen/_11sdp"
                app:cardElevation="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_gravity="bottom|right">

                <ImageView
                    android:id="@+id/matchesLike"
                    android:scaleType="centerCrop"
                    android:src="@drawable/like_anable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_10sdp">

                <TextView
                    android:id="@+id/matchesName"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:text="Charllie Hamilton"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/matchesDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_500"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="normal"
                    android:text="50 Km away"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>