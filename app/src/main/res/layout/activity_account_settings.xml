<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.in.hitch.Activities.MainActivity"
    android:background="@color/md_pink_100">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/login_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">

            <TextView
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:text="Payment ID"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:gravity="left"
                android:textColorHint="@color/black"
                android:hint="user@domain.com"
                android:backgroundTint="@color/black"
                android:fontFamily="sans-serif"
                android:inputType="text"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp">

                <TextView
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@color/black"
                    android:text="Change Password :"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginRight="@dimen/_7sdp"
                    android:visibility="visible"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:text="Enter Old Password *"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:gravity="left"
                    android:hint="Enter Old Password"
                    android:backgroundTint="@color/black"
                    android:fontFamily="sans-serif"
                    android:inputType="text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp">

                <TextView
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:text="Enter New Passowrd *"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:textColorHint="@color/black"
                    android:hint="Enter New Password"
                    android:backgroundTint="@color/black"
                    android:fontFamily="sans-serif"
                    android:inputType="text"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">

            <TextView
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:text="Re-enter New Passowrd *"
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:gravity="left"
                android:hint="Re-enter New Password"
                android:textColorHint="@color/black"
                android:backgroundTint="@color/black"
                android:fontFamily="sans-serif"
                android:inputType="text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <Button
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Update Account"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/_16sdp"
                android:backgroundTint="@color/md_pink_200"
                android:background="@drawable/button_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_30sdp">

            <Button
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Delete Account"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/_16sdp"
                android:backgroundTint="@color/md_red_700"
                android:background="@drawable/button_border"/>

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>