<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_pink_200</item>
        <item name="colorPrimaryDark">@color/md_pink_200</item>
        <item name="colorAccent">@color/md_pink_200</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlActivated">@color/md_pink_400</item>
        <item name="android:actionModeBackground">@color/md_indigo_900</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="navigationIcon">@drawable/ic_action_back</item>
        <item name="titleTextColor">@color/black</item>
        <item name="itemBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="bottomSheetDialogTheme">@style/CommentDialogTheme</item>
        <item name="android:autofilledHighlight">@android:color/transparent</item>

    </style>

    <style name="CommentDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CommentDialogStyle</item>
    </style>

    <style name="CommentDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="navigationIcon">@drawable/ic_action_close</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogTheme">
        <item name="colorAccent">@color/md_pink_300</item>
        <item name="android:gravity">center</item>
    </style>

</resources>